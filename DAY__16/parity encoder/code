module parity_encoder(

    input  [3:0] data_in,   // 4-bit input data
    output       even_parity,
    output       odd_parity
);

    // Even parity: XOR of all bits
    assign even_parity = ^data_in;    

    // Odd parity: complement of even parity
    assign odd_parity  = ~(^data_in);

endmodule
